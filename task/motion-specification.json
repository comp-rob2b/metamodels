        "GuardedMotion": {
            "@id": "mot:GuardedMotion",
            "@context": {
                "when": {
                    "@id": "mot:when",
                    "@type": "@id",
                    "@container": "@set"
                },
                "while": {
                    "@id": "mot:while",
                    "@type": "@id",
                    "@container": "@set"
                },
                "until": {
                    "@id": "mot:until",
                    "@type": "@id",
                    "@container": "@set"
                }
            }
        }
    }
}
